<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<addon id="repository.davidev" name="DaviDEV repository" version="1.0" provider-name="DaviDEV">
		<extension point="xbmc.addon.repository" name="Repositorio do Addon">
			<info compressed="false">http://raw.github.com/DaviGamesCraft/DaviDEV-Repo-KODI/master/addons.xml</info>
			<checksum>http://raw.github.com/DaviGamesCraft/DaviDEV-Repo-KODI/master/addons.xml.md5</checksum>
			<datadir zip="true">http://raw.github.com/DaviGamesCraft/DaviDEV-Repo-KODI/master/repo/</datadir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>Repositorio com addons para canais de TV etc.</summary>
			<description>Repositorio com addons criado por DaviDEV, e outros que o propio DaviDEV coloca.</description>
			<disclaimer></disclaimer>
			<platform>all</platform>
		</extension>
	</addon>
	
	<addon id="plugin.video.davidev" name="DaviDEV Stream" version="1.0-BETA" provider-name="DaviDEV">
	  <requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.beautifulsoup4" version="4.3.2"/>
		<import addon="script.common.plugin.cache" version="2.5.5"/>
		<import addon="plugin.video.gdrive"/>
	  </requires>
	  <extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	  </extension>
	  <extension point="xbmc.addon.metadata">
		<language>pt-BR</language>
		<platform>all</platform>
		<summary lang="pt-BR">Addon do DaviDEV Com TV e Series</summary>
		<description lang="pt-BR">Addon do DaviDEV, com todas as listas criada pelo mesmo (TV,Series,Filmes,Cracle,GDrvie, etc.) </description>
		<platform>all</platform>
	  </extension>
	</addon>
</addons>
